<<select_which_>>=
select_which_ <- function(.data, Which, .and.dots) {
  Which <- match.fun(Which)
  if (!missing(.and.dots)) {
    select_(.data, .dots = c(names(.data)[sapply(.data, Which)], .and.dots))
  } else {
    select_(.data, .dots = names(.data)[sapply(.data, Which)])
  }
}
